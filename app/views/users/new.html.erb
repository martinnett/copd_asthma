<% provide(:title, '添加用户') %>

<div class="text-center">
  <h1>添加用户</h1>
</div>
<hr>
<%= form_for @user, html: { class: 'login-form' } do |f| %>
<div class="form-group">
  <%= flash_message %>
</div>
<div class="list-group">
  <div class="list-group-item">
    <%= f.text_field :name, class: "form-control form-control-clear", placeholder: '请输入用户名' %>
  </div>
  <div class="list-group-item">
    <%= f.password_field :password, class: "form-control form-control-clear", placeholder: '请输入密码' %>
  </div>
</div>
<div class="form-group">
  <%= f.submit '保存', class: "btn btn-primary btn-block" %>
</div>
<% end %>
